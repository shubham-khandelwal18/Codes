Code:

#include<bits/stdc++.h>
using namespace std;
long long ans;
void merge(vector<int>& a,vector<int>& temp,int s,int mid,int e){
    int i=s,j=mid+1,k=s;
    while(i<=mid && j<=e){
        if(a[i]<=a[j]) temp[k++]=a[i++];
        else{
            temp[k++]=a[j++];
            ans+=(mid-i+1);
        }
    }
     while(i<=mid)
     temp[k++]=a[i++];
     while( j<=e)
      temp[k++]=a[j++];
      for(int i=s;i<=e;i++)
      a[i]=temp[i];
     
}
void merge_sort(vector<int>& a,vector<int>& temp,int s,int e){
    if(s<e){
        int mid=s+(e-s)/2;
        merge_sort(a,temp,s,mid);
        merge_sort(a,temp,mid+1,e);
        merge(a,temp,s,mid,e);
    }
}
	
int main()
 {
	int t;
	cin>>t;
	while(t--){
	    ans=0;
	int n;
	cin>>n;
	vector<int> a(n);

	for(int i=0;i<n;i++)
	cin>>a[i];
	if(n==1) cout<<"0\n";
	else{
	    vector<int> temp(n);
	    merge_sort(a,temp,0,n-1);
	    cout<<ans<<"\n";
	}
	}
	return 0;
}
